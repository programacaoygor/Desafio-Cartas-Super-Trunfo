#include <stdio.h>

int main() {
    // ===== Declaração das variáveis =====
    char codigo1[4], codigo2[4];
    unsigned long populacao1, populacao2;
    int pontos1, pontos2;
    float area1, area2, pib1, pib2;

    // ===== Cadastro da Carta 1 =====
    printf("=== Carta 1 ===\n");
    printf("Codigo (ex: A01): ");
    scanf("%3s", codigo1);
    printf("Populacao: ");
    scanf("%lu", &populacao1);
    printf("Area (km2): ");
    scanf("%f", &area1);
    printf("PIB (bilhoes): ");
    scanf("%f", &pib1);
    printf("Pontos turisticos: ");
    scanf("%d", &pontos1);
    printf("\n");

    // ===== Cadastro da Carta 2 =====
    printf("=== Carta 2 ===\n");
    printf("Codigo (ex: B02): ");
    scanf("%3s", codigo2);
    printf("Populacao: ");
    scanf("%lu", &populacao2);
    printf("Area (km2): ");
    scanf("%f", &area2);
    printf("PIB (bilhoes): ");
    scanf("%f", &pib2);
    printf("Pontos turisticos: ");
    scanf("%d", &pontos2);
    printf("\n");

    // ===== Cálculos =====
    float densidade1 = populacao1 / area1;
    float densidade2 = populacao2 / area2;
    float pibCapita1 = pib1 / populacao1;
    float pibCapita2 = pib2 / populacao2;
    float superPoder1 = populacao1 + area1 + pib1 + pontos1 + pibCapita1 + (1 / densidade1);
    float superPoder2 = populacao2 + area2 + pib2 + pontos2 + pibCapita2 + (1 / densidade2);

    // ===== Exibição das Cartas =====
    printf("=== CARTA 1 ===\n");
    printf("Codigo: %s\nPopulacao: %lu\nArea: %.2f\nPIB: %.2f\nPontos: %d\nDensidade: %.2f\nPIB per Capita: %.6f\nSuper Poder: %.2f\n\n",
           codigo1, populacao1, area1, pib1, pontos1, densidade1, pibCapita1, superPoder1);

    printf("=== CARTA 2 ===\n");
    printf("Codigo: %s\nPopulacao: %lu\nArea: %.2f\nPIB: %.2f\nPontos: %d\nDensidade: %.2f\nPIB per Capita: %.6f\nSuper Poder: %.2f\n\n",
           codigo2, populacao2, area2, pib2, pontos2, densidade2, pibCapita2, superPoder2);

    // ===== Comparação =====
    printf("=== COMPARACAO (1=Carta1 vence, 0=Carta2 vence) ===\n");
    printf("Populacao: %d\n", populacao1 > populacao2);
    printf("Area: %d\n", area1 > area2);
    printf("PIB: %d\n", pib1 > pib2);
    printf("Pontos: %d\n", pontos1 > pontos2);
    printf("Densidade (menor vence): %d\n", densidade1 < densidade2);
    printf("PIB per Capita: %d\n", pibCapita1 > pibCapita2);
    printf("Super Poder: %d\n", superPoder1 > superPoder2);

    return 0;
}
